<?xml version="1.0" encoding="UTF-8"?>
<jasperReport
        xmlns="http://jasperreports.sourceforge.net/jasperreports"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://jasperreports.sourceforge.net/jasperreports
        http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
        name="Top10ClientesContratos"
        pageWidth="595" pageHeight="842" columnWidth="555"
        leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- ====================================================== -->
    <!-- CAMPOS -->
    <!-- ====================================================== -->
    <field name="cliente" class="java.lang.String"/>
    <field name="total" class="java.lang.Long"/>

    <!-- ====================================================== -->
    <!-- PAGE HEADER -->
    <!-- ====================================================== -->
    <pageHeader>
        <band height="90">

            <!-- LOGO -->
            <image>
                <reportElement x="0" y="5" width="80" height="60"/>
                <imageExpression><![CDATA[
                    getClass().getResource("/media/SISEK.png")
                ]]></imageExpression>
            </image>

            <!-- TÍTULO -->
            <staticText>
                <reportElement x="100" y="5" width="350" height="30"/>
                <textElement textAlignment="Center">
                    <font size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[Top 10 Clientes con Más Contratos Activos]]></text>
            </staticText>

            <!-- FECHA -->
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="400" y="50" width="155" height="20"/>
                <textElement textAlignment="Right">
                    <font size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>

            <!-- LÍNEA -->
            <line>
                <reportElement x="0" y="80" width="555" height="1"/>
            </line>

        </band>
    </pageHeader>

    <!-- ====================================================== -->
    <!-- DESCRIPCIÓN -->
    <!-- ====================================================== -->
    <columnHeader>
        <band height="75">

            <!-- DESCRIPCIÓN -->
            <textField isStretchWithOverflow="true">
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[
                "Este reporte muestra los 10 clientes que actualmente poseen la mayor cantidad de contratos activos."
            ]]></textFieldExpression>
            </textField>

            <!-- LÍNEA SEPARADORA -->
            <line>
                <reportElement x="0" y="32" width="555" height="1"/>
            </line>

            <!-- ENCABEZADO TABLA -->

            <staticText>
                <reportElement x="0" y="40" width="350" height="25"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Cliente]]></text>
            </staticText>

            <staticText>
                <reportElement x="350" y="40" width="205" height="25"/>
                <textElement><font isBold="true"/></textElement>
                <text><![CDATA[Contratos Activos]]></text>
            </staticText>

            <!-- LÍNEA FINAL DEL HEADER -->
            <line>
                <reportElement x="0" y="65" width="555" height="1"/>
            </line>

        </band>
    </columnHeader>


    <!-- ====================================================== -->
    <!-- DETAIL (FILAS DE LA TABLA) -->
    <!-- ====================================================== -->
    <detail>
        <band height="20">

            <!-- CLIENTE -->
            <textField>
                <reportElement x="0" y="0" width="350" height="20"/>
                <textFieldExpression><![CDATA[$F{cliente}]]></textFieldExpression>
            </textField>

            <!-- TOTAL -->
            <textField>
                <reportElement x="350" y="0" width="205" height="20"/>
                <textFieldExpression><![CDATA[$F{total}]]></textFieldExpression>
            </textField>

        </band>
    </detail>

    <!-- ====================================================== -->
    <!-- PIE DE PÁGINA -->
    <!-- ====================================================== -->
    <pageFooter>
        <band height="60">

            <textField>
                <reportElement x="0" y="5" width="350" height="12"/>
                <textElement><font size="8"/></textElement>
                <textFieldExpression><![CDATA["Autor: Usuario Admin"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="20" width="350" height="12"/>
                <textElement><font size="8"/></textElement>
                <textFieldExpression><![CDATA["Sistema: Sistema de Contratos GPS"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="35" width="350" height="12"/>
                <textElement><font size="8"/></textElement>
                <textFieldExpression><![CDATA["Código del reporte: GPS-RPT-003"]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="400" y="35" width="155" height="15"/>
                <textElement textAlignment="Right">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[
                    "Página " + $V{PAGE_NUMBER}
                ]]></textFieldExpression>
            </textField>

        </band>
    </pageFooter>

    <summary>
        <band height="20"/>
    </summary>

</jasperReport>
